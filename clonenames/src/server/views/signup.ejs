<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Codenames</title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <div class="h-screen w-screen bg-primary flex items-center justify-center text-white">
            <div class="bg-secondary w-[400px] h-[75vh] rounded-lg shadow-2xl p-2 flex flex-col">
                <!-- navbar to switch from login and sign up (default "/" is login) -->
                <div class="flex justify-center mt-4 h-[15%]">
                    <div class="relative bg-accent w-[90%] h-[2.5rem] flex text-black rounded-full overflow-hidden">
                        <!-- Login -->
                        <a href="/" class="pl-[5%] hover:bg-primary flex-1 flex items-center justify-center cursor-pointer hover:text-white">Login</a>
                        <!-- Center circle for styling -->
                        <div class="bg-info rounded-full absolute inset-0 m-auto h-10 w-10 bg-active"></div>
                        <!-- Sign up -->
                        <a href="/signup" class="pr-[5%] text-white bg-info flex-1 flex items-center justify-center cursor-pointer">Sign Up</a>
                    </div>
                </div>
                <form action="/auth/register" method="POST" class="flex flex-col h-[85%]">
                    <div class="overflow-y-auto w-[90%] flex flex-col justify-center m-auto gap-2 mt-4">
                        <label class="input input-secondary flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-black">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                            </svg>
                            <input type="text" id="email" name="email" placeholder="Email" class="text-black"/>
                        </label>
                        <label class="input input-secondary flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-black">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                            </svg>
                            <input type="text" id="username" name="username" placeholder="Username" class="text-black"/>
                        </label>
                        <label class="input input-secondary flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-black">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                            </svg>                      
                            <input type="password" id="password" name="password" placeholder="Password" class="text-black"/>
                        </label>
                    </div>
                    <div class="flex-grow"></div>
                    <button type="submit" class="text-white w-[90%] m-auto h-[2.5rem] flex items-center justify-center rounded-lg bg-info mb-1">Sign Up</button>
                </form>
            </div>
        </div>
    </body>
    <script src="/js/main.js"></script>
</html>